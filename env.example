# Application Environment
# Options: development, production, testing
APP_ENV=development

# Server Configuration
MACHINE_ID=1
SERVER_NAME=LingFramework
SERVER_DESC=LingFramework Server
SERVER_URL=http://localhost:7072
SERVER_LOGO=
SERVER_TERMS_URL=

# Database Configuration
DB_DRIVER=sqlite
DSN=./ling.db
# For MySQL: mysql://user:password@tcp(localhost:3306)/dbname
# For PostgreSQL: postgres://user:password@localhost:5432/dbname?sslmode=disable

# Server Address and Mode
ADDR=:7072
MODE=development

# API Prefixes
DOCS_PREFIX=/api/docs
API_PREFIX=/api
ADMIN_PREFIX=/admin
AUTH_PREFIX=/auth
MONITOR_PREFIX=/metrics

# Session Configuration
SESSION_SECRET=your-secret-key-change-in-production
SESSION_EXPIRE_DAYS=7
API_SECRET_KEY=your-api-secret-key-change-in-production

# Authentication Configuration
# Auth type: jwt or oauth2 (default: jwt)
AUTH_TYPE=jwt
# Permission type: rbac or abac (default: rbac)
PERMISSION_TYPE=rbac

# JWT Configuration (when AUTH_TYPE=jwt)
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
# JWT access token TTL in seconds (default: 900 = 15 minutes)
JWT_ACCESS_TOKEN_TTL=900
# JWT refresh token TTL in seconds (default: 604800 = 7 days)
JWT_REFRESH_TOKEN_TTL=604800
# JWT issuer (default: LingFramework)
JWT_ISSUER=LingFramework

# OAuth2 Configuration (when AUTH_TYPE=oauth2)
# OAuth2 access token TTL in seconds (default: 900 = 15 minutes)
OAUTH2_ACCESS_TOKEN_TTL=900
# OAuth2 refresh token TTL in seconds (default: 604800 = 7 days)
OAUTH2_REFRESH_TOKEN_TTL=604800

# Authentication Middleware Configuration
# Token header name (default: Authorization)
AUTH_TOKEN_HEADER=Authorization
# Token prefix (default: Bearer )
AUTH_TOKEN_PREFIX=Bearer 
# Skip paths for authentication (comma-separated, in addition to defaults)
# Default skip paths: /api/auth/login, /api/auth/register, /api/auth/refresh, /health, /metrics
AUTH_SKIP_PATHS=

# Logging Configuration
LOG_LEVEL=info
LOG_FILENAME=./logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_AGE=30
LOG_MAX_BACKUPS=5
LOG_DAILY=true

# LLM Configuration
# LLM Provider: openai or ollama (default: openai)
LLM_PROVIDER=openai

# OpenAI Compatible API Configuration
OPENAI_API_KEY=sk-2fd01e230c274cf79fa50fb03ffde1da
OPENAI_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
OPENAI_MODEL=deepseek-v3

# Ollama Configuration (when LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Alternative naming (LLM_* prefix also supported)
# LLM_API_KEY=sk-your-api-key
# LLM_BASE_URL=https://api.openai.com/v1
# LLM_MODEL=gpt-3.5-turbo

# Search Configuration
SEARCH_ENABLED=false
SEARCH_PATH=./search
SEARCH_BATCH_SIZE=100

# Language Configuration
LANGUAGE_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_PATH=./backups
BACKUP_SCHEDULE=0 2 * * *

# Cache Configuration
CACHE_TYPE=local
# Redis Configuration (when CACHE_TYPE=redis)
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_IDLE_TIMEOUT=5m
# Local Cache Configuration (when CACHE_TYPE=local)
LOCAL_CACHE_MAX_SIZE=1000
LOCAL_CACHE_DEFAULT_EXPIRATION=5m
LOCAL_CACHE_CLEANUP_INTERVAL=10m

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_FILE=
SSL_KEY_FILE=

# Storage Configuration
# Options: local, qiniu, cos, minio, oss, s3
STORAGE_KIND=local

# LingStorage Configuration (Recommended)
LINGSTORAGE_BASE_URL=https://storage.lingbyte.com
LINGSTORAGE_API_KEY=
LINGSTORAGE_API_SECRET=
LINGSTORAGE_BUCKET=
